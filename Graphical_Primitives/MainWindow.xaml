<Window x:Class="Graphical_Primitives.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphical_Primitives"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#FFD1DC">
    <Grid>
        <Label FontWeight="Bold" Content="Figura" HorizontalAlignment="Left" Margin="16,20,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Linia" HorizontalAlignment="Left" Margin="20,45,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Okrąg" HorizontalAlignment="Left" Margin="20,65,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Prostokąt" HorizontalAlignment="Left" Margin="20,85,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Trójąt" HorizontalAlignment="Left" Margin="20,105,0,0" VerticalAlignment="Top"/>
        <Label FontWeight="Bold" Content="Kolor" HorizontalAlignment="Left" Margin="16,120,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="20,140,0,0" VerticalAlignment="Top" Width="80" Height="18">
            <ComboBoxItem>Biały</ComboBoxItem>
            <ComboBoxItem>Czerwony</ComboBoxItem>
            <ComboBoxItem>Zielony</ComboBoxItem>
            <ComboBoxItem>Niebieski</ComboBoxItem>
        </ComboBox>
        <Label FontWeight="Bold" Content="Punkt X" HorizontalAlignment="Left" Margin="16,160,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="20,180,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="80"/>
        <Label FontWeight="Bold" Content="Punkt Y" HorizontalAlignment="Left" Margin="16,200,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="20,220,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="80"/>
        <Label FontWeight="Bold" Content="Promień R" HorizontalAlignment="Left" Margin="16,240,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="20,260,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="80"/>
        <Canvas Margin="120,20,20,20" Background="#FFFFFF">

        </Canvas>
    </Grid>
</Window>
